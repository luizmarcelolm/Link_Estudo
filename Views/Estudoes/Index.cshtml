@model IEnumerable<Link_Estudo.Models.Estudo>

@{
    ViewData["Title"] = "Index";
}
<h1 class="text-center">Lista de informações</h1>
<p>
    <a asp-action="Create" class="btn btn-info">Criar novas informações</a>
</p>
<hr />
<table class="table table-dark table-hover" id="dataTable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Link)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Assunto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descricao)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
             <td>
                    <div class="d-inline-block text-truncate" style="max-width: 400px;">
                        @Html.DisplayFor(modelItem => item.Link)
                 </div>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Assunto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descricao)
            </td>

            <td>
                    <div class="d-grid gap-1 col-9 mx-auto">
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">Ver</a>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-info">Editar</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-info">Excluir</a>
                    </div>
            </td>
        </tr>
}
    </tbody>
</table>
